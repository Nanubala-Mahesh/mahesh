
<%= form_for @client do |f| %>

<% if @client.errors.any? %>
		<h4>These errors prohibited the form from being saved: </h4>
			<ul style="color:red;">
				<% @client.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>


<div class="form-group">
	<label>Name</label><br/>
	<%= f.text_field :name, class: "form-control" %><br/>
</div>


<div class="form-group">
	<label>Company</label><br/>
	<%= f.text_field :copany, class: "form-control" %><br/>
</div>


<div class="form-group">
	<label>Mobile</label><br/>
	<%= f.text_field :mobile, class: "form-control" %><br/>
</div>


<div class="form-group">
	<label>Email</label><br/>
	<%= f.email_field :email, class: "form-control" %><br/>
</div>

	<%= f.submit "Submit", class: "btn btn-primary" %> or <%= link_to "back", clients_path %>
	<% end %>  